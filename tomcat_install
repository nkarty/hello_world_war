pipeline {
    agent {
        label "slave2"
    }
    stages {
        stage('tomcat insatallation') {
            steps {
                sh 'rm -rf hello_world_war'
                sh 'git clone https://github.com/nkarty/hello_world_war.git'
                sh 'chmod 755 ${WORKSPACE}/hello_world_war/tomcat'
                sh '${WORKSPACE}/hello_world_war/tomcat_install'
            }
        }
        stage('Build') {
            steps {
                sh 'rm -rf hello_world_war'
                sh 'git clone https://github.com/nkarty/hello_world_war.git'
                dir('hello_world_war'){
                sh 'mvn package'
                }
            }
        }
        stage('Deploy step') {
             steps {
                 sh 'sudo cp ${WORKSPACE}/hello_world_war/target/hello_world_war-1.0.0.war /var/lib/tomcat9/webapps/'       
            }
        }
    }
}
